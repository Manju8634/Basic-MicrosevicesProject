spring:
  application:
    name: ApiGateway
  cloud:
    gateway:
      routes:
        - id: UserService
          uri: http://localhost:8083/
          predicates: 
            - Path=/serviceA/**
        - id: ProductService
          uri: http://localhost:8082/
          predicates:
            - Path=/product/**
        - id: ReviewService 
          uri:
            http://localhost:8081/
          predicates:
          - Path=/reviews/**							

		
server:
  port: 8001
eureka:
  client:
    service-url:
      defaultZone: http://localhost:8000/eureka/
    fetch-registry: true
    register-with-eureka: true
  instance:
    hostname: localhost
    preferIpAddress: true